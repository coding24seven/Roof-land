{
  "name": "static-site",
  "version": "1.0.0",
  "description": "Static Site App",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel devserver watch:sass",
    "devserver": "live-server --host=192.168.1.10 --port=9348 --no-css-inject --no-browser --verbose --wait=1500",
    "watch:sass": "node-sass sass/main.scss css/style.css -rw --output-style expanded --source-comments",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "concat": "^1.0.3",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.1"
  }
}
